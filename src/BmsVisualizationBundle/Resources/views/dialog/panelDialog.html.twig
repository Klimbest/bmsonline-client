
{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}
<div class="dialog-panel-settings " title="Kreator paneli">
    {{form_start(form)}}

    <div class="row dialog-panel-general">
        <div class="col-md-3">
            {{form_row(form.name)}}
        </div>       
        <div class="col-md-4">
            {{form_row(form.visibility)}}
            {{form_row(form.tooltip)}}
        </div>
    </div>

    <ul class="nav nav-tabs">
        <li id="dialog-panel-data" class="active"><a>Typ danych</a></li>
        <li id="dialog-panel-format" class=""><a>Format</a></li>
        <li id="dialog-panel-navigation" class=""><a>Nawigacja</a></li>
        <li id="dialog-panel-event" class=""><a>Zdarzenia</a></li>
        <li id="dialog-panel-progress-bar" class=""><a>Ustawienia</a></li>
    </ul>

    <div class="row dialog-panel-data">
        <div class="col-md-12">
            <div class="well well-lg">
                <div class="row">
                    <div class="col-lg-12">
                        <div id="panel_type" class="form-group col-md-2">
                            {{form_row(form.type)}}
                        </div>
                        <div class="input-group col-md-5">
                            <div class="form-group">
                                <input id="panel-source-content" name="Źródło danych" type="text" class="form-control" disabled required/>
                                <input id="panel-source-value" type="hidden" class="form-control" />
                            </div>
                            <span class="input-group-btn">                    
                                <button id="manager" class="btn btn-default" type="button"><i class="fa fa-plus fa-fw"></i></button>
                            </span>                    
                        </div>            
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row dialog-panel-format">
        <div class="col-md-12">
            {% include 'BmsVisualizationBundle:dialog:panelDialogFormat.html.twig' %}
        </div>
    </div>
    <div class="row dialog-panel-navigation">
        <div class="col-md-12">
            <div class="well well-lg">
                <div class="row">
                    <div class="col-md-6">
                        {{form_row(form.page)}}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row dialog-panel-event">
        <div class="col-md-12">
            {% include 'BmsVisualizationBundle:dialog:panelDialogEvent.html.twig' %}
        </div>
    </div>
    <div class="row dialog-panel-progress-bar">
        <div class="col-md-12">
            {% include 'BmsVisualizationBundle:dialog:progresBarManager.html.twig' %}
        </div>
    </div>
    {{form_rest(form)}}
    {{form_end(form)}}

</div>