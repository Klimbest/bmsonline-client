<div class="well well-lg">
    <div class="row">
        <div class="col-md-6 text-left">
            <button type="button" class="btn btn-default btn-xs add-term">Dodaj nowy <i class="fa fa-plus fa-fw fa-blue"></i></button>
        </div>
        <div class="col-md-6 text-right">
            <input type="button" class="btn btn-default btn-xs checkAll" value="Zaznacz wszystkie"></input>
            <button type="button" class="btn btn-default btn-xs refresh"><i class="fa fa-refresh fa-fw fa-blue"></i></button>
            <button type="submit" class="btn btn-default btn-xs"><i class="fa fa-trash-o fa-fw fa-red remove-many"></i></button>
        </div>
    </div>
    <div class="row" style="overflow-y: auto; max-height: 550px;">
        <table class="table table-bordered table-condensed table-responsive small">
            <thead>
                <tr>
                    <th class="">Nazwa zmiennej</th>
                    <th class="">Wartość aktualna</th>
                    <th class="text-center"></th>
                    <th class="">Wartość warunku</th>
                    <th class="text-center">Typ efektu</th>
                    <th class="">Parametr efektu</th>
                    <th class="manage text-center">Zarządzaj</th>
                </tr>
            </thead>
            <tbody>
                {% if terms is defined %}
                    {% if terms is not empty %}
                        <tr>
                            <td></td>
                            <td class="text-center">Jeżeli żaden z poniższych warunków nie jest spełniony</td>
                            <td class="text-center"></td>
                            <td class="text-center"></td>
                            <td class="text-center">Właściwości formatu</td>
                            <td class="">display;none</td>
                            <td class=""></td>
                            <td></td>
                        </tr>
                        {% for term in terms %}                    
                            <tr>
                                <td class="">{{term.register.name}}</td>
                                <td class="text-center">{{term.register.registerCurrentData.fixedValue}}</td>
                                <td class="text-center">{{term.condition.type}}</td>
                                <td class="text-center">{{term.condition.value}}</td>
                                <td class="text-center">
                                    {% if term.effect.type == "src" %}
                                        Wyświetl obraz
                                    {% elseif term.effect.type == "css" %}
                                        Właściwości formatu
                                    {% elseif term.effect.type == "animation" %}
                                        Animacja
                                    {% elseif term.effect.type == "alert" %}
                                        Wyskakujące okienko
                                    {% else %}
                                        {{term.effect.type}}
                                    {% endif %}
                                </td>
                                <td class="">{{term.effect.content}}</td>
                                <td class="manage text-center">
                                    {#<i id="{{term.id}}" class="fa fa-edit fa-fw fa-green"></i>#}
                                    <i id="{{term.id}}" class="fa fa-trash-o fa-fw fa-red"></i>                                        
                                </td>
                                <td><input type="checkbox" name="checkedTermId[]" value="{{term.id}}"/></td>
                            </tr>
                        {% endfor %}
                    {% else %}
                        <tr id="no-data">
                            <td colspan="11" class="text-center">
                                <h2><span class="label label-primary"> Brak warunków</span></h2>
                            </td>
                        </tr>
                    {% endif %}
                {% else %}
                    <tr id="no-data">
                        <td colspan="11" class="text-center">
                            <h2><span class="label label-primary"> Brak warunków</span></h2>
                        </td>
                    </tr>
                {% endif %}
                </tbody>
            </table>
        </div>
    </div>