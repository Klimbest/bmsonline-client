<div class="dialog-variable-panel-settings" title="Właściwości panelu zminnej:">
    <div class="form-group">
        <div class="row">
            <div class="col-md-6">
                <div class="row edit-controls text-left">
                    <div class="col-md-12">
                        <button type="button" class="btn btn-default btn-xs btn-bold"><i class="fa fa-bold fa-fw"></i></button>
                        <button type="button" class="btn btn-default btn-xs btn-underline"><i class="fa fa-underline fa-fw"></i></button>
                        <button type="button" class="btn btn-default btn-xs btn-italic"><i class="fa fa-italic fa-fw"></i></button>
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-default btn-xs btn-align-left"><i class="fa fa-align-left fa-fw"></i></button>
                            <button type="button" class="btn btn-default btn-xs btn-align-center"><i class="fa fa-align-center fa-fw"></i></button>
                            <button type="button" class="btn btn-default btn-xs btn-align-right"><i class="fa fa-align-right fa-fw"></i></button>
                        </div>
                        <button type="button" class="btn btn-default btn-xs disabled"><i class="fa fa-question fa-fw"></i></button>
                        <button type="button" class="btn btn-default btn-xs disabled"><i class="fa fa-question fa-fw"></i></button>
                        <button type="button" class="btn btn-default btn-xs disabled"><i class="fa fa-question fa-fw"></i></button>
                        <button type="button" class="btn btn-default btn-xs disabled"><i class="fa fa-question fa-fw"></i></button>
                        <button type="button" class="btn btn-default btn-xs disabled"><i class="fa fa-question fa-fw"></i></button>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-5">
                        <label for="fontFamily">Styl:</label>
                        <select id="fontFamily" class="form-control font-family">
                            {% set fonts = ["Times New Roman",
                                "Arial",
                                "Tahoma",
                                "Verdana"]%}
                            {% for font in fonts %}
                                <option value="{{font}}">{{font}}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="fontSize">Rozmiar:</label>
                        <select id="fontSize" class="form-control font-size">
                            {% for i in 6..96 %}
                                <option value="{{i}}">{{i}}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="fontColor">Kolor:</label>
                        <input id="fontColor" type="color" class="form-control"/>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-6">
                        <span class="label label-primary">Pozycja:</span>
                    </div>
                    <div class="col-md-6">
                        <span class="label label-primary">Rozmiar:</span>
                    </div>
                </div>
                <div class="row ">
                    <div class="col-md-3">
                        <label for="topPosition">Od góry:</label>
                        <input id="topPosition" type="number" class="form-control" value="50"/>
                    </div>
                    <div class="col-md-3">
                        <label for="leftPosition">Od lewej:</label>
                        <input id="leftPosition" type="number" class="form-control" value="50"/>
                    </div>
                    <div class="col-md-3">
                        <label for="width">Szerokość:</label>
                        <input id="width" type="number" class="form-control" value="100"/>
                    </div>
                    <div class="col-md-3">
                        <label for="height">Wysokość:</label>
                        <input id="height" type="number" class="form-control" value="100"/>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <label for="registers">Rejestry:</label>
                <select class="form-control registers">
                    {% for register in registers %}
                        <option value="{{ register.id }}">{{ register.name }} - {{ register.description }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="col-md-9 text-center">
                <div class="dialog-panel"></div>
            </div>
        </div>
    </div>
</div>