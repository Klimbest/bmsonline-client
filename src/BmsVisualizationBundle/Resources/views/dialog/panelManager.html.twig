{% form_theme form 'BmsVisualizationBundle::bootstrap_3_horizontal_layout.html.twig' %}

<div class="col-md-12" id="panel-form">
    {{ form_start(form) }}
    <div class="row">
        <div class="col-md-6 col-lg-4">
            {{ form_row(form.name) }}
        </div>
        <div class="col-md-4 col-lg-4">
            {{ form_row(form.visibility) }}
            {{ form_row(form.tooltip) }}
        </div>
        <div class="col-md-2 col-lg-4 text-center">
            <button class="btn btn-success" type="button" onclick="savePanel()">Zapisz</button>
            <button class="btn btn-default" type="button" onclick="closePanelForm()">Anuluj</button>
        </div>
    </div>

    <ul class="nav nav-tabs">
        <li id="dialog-panel-data" class="active"><a>Typ danych</a></li>
        <li id="dialog-panel-format" class=""><a>Format</a></li>
        <li id="dialog-panel-navigation" class=""><a>Nawigacja</a></li>
        <li id="dialog-panel-event" class=""><a>Zdarzenia</a></li>
        <li id="dialog-panel-progress-bar" class=""><a>Ustawienia</a></li>
    </ul>
    {# Data section #}
    <div class="well well-lg dialog-panel-data">
        <div id="panel_type" class="form-group col-md-5 col-lg-4">
            {{ form_row(form.type) }}
        </div>
        <div class="input-group col-md-5">
            <div class="form-group">
                <input id="panel-source-content" name="Źródło danych" type="text" class="form-control"
                       oninput="updateContentSource()" required/>
            </div>
            <span class="input-group-btn">
                <button id="manager" class="btn btn-default disabled" type="button"><i
                            class="fa fa-plus fa-fw"></i></button>
            </span>
        </div>
    </div>
    {# Format section #}
    <div class="well well-lg dialog-panel-format">
        {% include 'BmsVisualizationBundle:dialog:panelManagerFormat.html.twig' %}
    </div>
    {# Navigation section #}
    <div class="well well-lg dialog-panel-navigation">
        <div class="col-md-6">
            <div class="form-group">
                <div class="col-md-8 col-sm-9">
                    <select id="href" class="form-control" name="txt_href" onchange="updateHref()">
                        <option value="" selected></option>
                        {% for page in pages %}
                            <option value="{{ page.id }}">{{ page.name }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
        </div>
    </div>
    {# Event section #}
    <div class="well well-lg dialog-panel-event">
        {% include 'BmsVisualizationBundle:dialog:panelManagerEvent.html.twig' %}
    </div>

    <input id="page_id" type="hidden" name="panel[page_id]"/>
    <input id="panel_id" type="hidden" name="panel_id"/>
    {{ form_row(form.contentSource) }}
    {{ form_rest(form) }}
    {{ form_end(form) }}
</div>
