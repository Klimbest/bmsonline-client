<div
        {% if (panel.href is not null) and (panel.href != "") %}
            onclick="ajaxChangePage( {{ panel.href }} );"
        {% endif %}
        {% if panel.tooltip %}
            title="{{ panel.name }}"
        {% endif %}
        name="{{ panel.name }}"
        id="{{ panel.id }}" class="bms-panel text-{{ panel.textAlign }} bms-panel-{{ panel.type }}"
        style="
                top: {{ panel.topPosition }}px;
                left: {{ panel.leftPosition }}px;
                width: {{ panel.width }}px;
                height: {{ panel.height }}px;
                border-style: {{ panel.borderStyle }};
                border-width: {{ panel.borderWidth }}px;
                border-color: {{ panel.borderColor }};
                border-top-left-radius: {{ panel.borderRadiusLeftTop }}px;
                border-bottom-left-radius: {{ panel.borderRadiusLeftBottom }}px;
                border-top-right-radius: {{ panel.borderRadiusRightTop }}px;
                border-bottom-right-radius: {{ panel.borderRadiusRightBottom }}px;
                background-color: {{ panel.backgroundColor }};
                opacity: {{ panel.opacity }};
                font-weight: {{ panel.fontWeight }};
                text-decoration: {{ panel.textDecoration }};
                font-style: {{ panel.fontStyle }};
                font-family: {{ panel.fontFamily }};
                color: {{ panel.fontColor }};
                font-size: {{ panel.fontSize }}px;
                line-height: {{ panel.height }}px;
                z-index: {{ panel.zIndex }};
        {% if terms is defined %}
            {% for term in terms %}
                {% if term.panel_id == panel.id %}
                        display: none;
                {% endif %}
            {% endfor %}
        {% endif %}
    {% if panel.visibility == 0 %}
            display: none;
    {% endif %}
    {% if (panel.href is not null) and (panel.href != "") %}
            cursor: pointer;
    {% endif %}
                ">
    {% if panel.type == 'text' %}
        <span class="bms-panel-content">{{ panel.contentSource }}</span>
    {% elseif panel.type == 'variable' %}
        <span id="{{ panel.contentSource }}" class="bms-panel-content"></span>
        <input id="{{ panel.contentSource }}" type="hidden" value="{{ panel.displayPrecision }}"/>
    {% elseif panel.type == 'image' %}
        <img class="img-responsive" src="{{ panel.contentSource }}"/>
    {% elseif panel.type == 'widget' %}

    {% endif %}
</div>

