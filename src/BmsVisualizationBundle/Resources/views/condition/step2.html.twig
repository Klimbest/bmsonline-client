<h3><span class="label label-primary">Wybierz warunek:</span></h3>
<div class="row text-left">


    <div class="col-md-3">
        <label>Wybierz z dostępnych</label>
        <div class="row header">
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-8">
                        <label for="condition_type_filter">Typ</label>
                        <select id="condition_type_filter" class="form-control small" name="condition_type_filter">
                            <option value="1">=</option>
                            <option value="2">&ne;</option>
                            <option value="3">&gt;</option>
                            <option value="4">&ge;</option>
                            <option value="5">&lt;</option>
                            <option value="6">&le;</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <label>Wartość</label>
            </div>
        </div>
        <div class="row body">
            <div class="col-md-12">
                {% if conditions|length > 0 %}
                    {% for condition in conditions %}
                        <div class="row condition-choice 
                             {% if condition.type == "==" %}
                                 1
                             {% elseif condition.type == "!=" %}
                                 2
                             {% elseif condition.type == ">"%}
                                 3
                             {% elseif condition.type == ">="%}
                                 4
                             {% elseif condition.type == "<"%}
                                 5
                             {% elseif condition.type == "<="%}
                                 6
                             {% endif %}
                             ">
                            <div class="col-md-6">
                                {{condition.type}}
                            </div>
                            <div class="col-md-6">
                                {{condition.value}}
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}

                {#{% if registers|length > 0 %}
                    {% for register in registers|sort %}
                        <div id="{{register.id}}" class="row register-choice {{register.device.id}} ">
                            <div class="col-md-2">{{ register.device.name }}</div>
                            <div class="col-md-1">{{ register.function }}</div>
                            <div class="col-md-2">{{ register.registerAddress }}</div>
                            <div class="col-md-2 text-left register_name">{{ register.name }}</div>
                            <div class="col-md-5 text-left">{{ register.description}}</div>
                        </div>
                    {% endfor %}
                {% endif %}#}
            </div>
        </div>
    </div>
    <div class="col-md-4 col-md-offset-1">
        <label>Dodaj nowy</label>
        <div class="row">
            <div class="col-md-4 col-md-offset-1 text-center">
                <select id="condition_type" class="form-control" name="condition_type">
                    <option value="==">=</option>
                    <option value="!=">&ne;</option>
                    <option value=">">&gt;</option>
                    <option value=">=">&ge;</option>
                    <option value="<">&lt;</option>
                    <option value="<=">&le;</option>
                </select>
            </div>
            <div class="col-md-4 col-md-offset-2 text-center">
                <input id="condition_val" type="text" class="form-control" name="condition_val"/>
            </div>
        </div>
    </div>
</div>