{% extends 'VisualizationBundle::layout.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <h1>Tworzenie nowej strony</h1>
            {{ form_start(form) }}

            <div class="row">
                <div class="col-md-9">
                    {{ form_row(form.name) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    {{ form_row(form.width) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(form.height) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(form.backgroundColor) }}
                </div>
            </div>
            <h1></h1>
            <div class="btn-group">
                <a class="btn btn-warning" href="{{ app.request.headers.get('referer')}}">
                    <i class="fa fa-arrow-left"></i> Anuluj
                </a>
                <button type="submit" class="btn btn-success"><i class="fa fa-plus"></i> Zapisz</button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
