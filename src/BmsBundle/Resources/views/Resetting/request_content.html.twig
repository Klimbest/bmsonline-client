{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 text-center">
            {% if invalid_username is defined %}
                <h3><span class="label label-danger">{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}</span></h3>
            {% endif %}
            <label for="email">{{ 'resetting.request.username'|trans }}</label>
            <input type="text" class="form-control" id="username" name="username" required="required" />
            <button type="submit" class="btn btn-default navbar-btn">{{ 'resetting.request.submit'|trans }}</button>
        </div>
    </div>
</form>
